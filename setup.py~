import os
import sys

print "making ~/.googler directory."

path = str(os.environ['HOME']) + '/.googler'

if not os.path.exists(path):
    os.makedirs(path)
else:
    print "directory already exists."

print "writing file"

src = open('googler.py')
dst = open(path + '/googler.py', 'w+')

dst.write(src.read())

src.close()
dst.close()

print "setting alias"
alias = 'alias googler="python ' + path + '/googler.py"'

with open("~/.bashrc", "a") as f:
    f.write(alias)

print 'all done, use googler "search string" to operate.'
